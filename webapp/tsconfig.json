{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"inlineSourceMap": false,
		"lib": ["esnext"],
		"listEmittedFiles": false,
		"listFiles": false,
		"moduleResolution": "node",
		"noFallthroughCasesInSwitch": true,
		"pretty": true,
		"resolveJsonModule": true,
		"rootDir": "..",
		"skipLibCheck": true,
		"strict": true,
		"traceResolution": false,
		"outDir": "",
		"target": "esnext",
		"module": "esnext",
		"types": []
	},
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.ts"],
	"include": ["**/*.ts"]
}
