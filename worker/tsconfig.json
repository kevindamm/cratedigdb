{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"inlineSourceMap": false,
		"lib": ["esnext"],
		"listEmittedFiles": false,
		"listFiles": false,
		"moduleResolution": "node",
		"noFallthroughCasesInSwitch": true,
		"pretty": true,
		"resolveJsonModule": true,
		"rootDir": ".",
		"skipLibCheck": true,
		"strict": true,
		"traceResolution": false,
		"outDir": "",
		"target": "esnext",
		"module": "esnext",
		"types": [
			"@types/node",
			"@types/service-worker-mock",
			"@cloudflare/workers-types"
		]
	},
	"exclude": [
		"node_modules",
		"dist",
		"test/**/*.ts",
		"**/*.test.ts"],
	"include": [
		"../www/**/*.html",
		"../www/**/*.htmx",
		"../www/**/*.pug",
		"**/*.ts"]
}
